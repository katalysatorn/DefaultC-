            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "windows": {
                "name": "Launch (Windows)",
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "gdb",
                "miDebuggerPath": "gdb.exe",
                "program": "${workspaceFolder}/output/main.exe"
            },
